<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lastKormLastGul">

    <TextView
        android:id="@+id/gulHere"
        android:layout_width="244dp"
        android:layout_height="91dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:text="@string/walk"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lastWalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="чч:мм"
        android:inputType="time"
        android:minHeight="48dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gulHere" />

    <TextView
        android:id="@+id/kormHere"
        android:layout_width="244dp"
        android:layout_height="91dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="212dp"
        android:text="@string/lunch"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lastFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="чч:мм"
        android:inputType="time"
        android:minHeight="48dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kormHere" />

    <Button
        android:id="@+id/endVetData"
        android:layout_width="141dp"
        android:layout_height="56dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="6dp"
        android:text="Завершить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goBackToDates"
        android:layout_width="141dp"
        android:layout_height="56dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="120dp"
        android:text="Назад"
        app:layout_constraintEnd_toStartOf="@+id/endVetData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>