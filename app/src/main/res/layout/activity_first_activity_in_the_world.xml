<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivityInTheWorld">

    <Button
        android:id="@+id/firstButtonInTheWorld"
        android:layout_width="166sp"
        android:layout_height="104sp"
        android:layout_marginStart="120sp"
        android:layout_marginTop="220sp"
        android:text="@string/FirstButtonInTheWorld"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/dogPage"
        android:layout_width="101sp"
        android:layout_height="101sp"
        android:contentDescription="@string/Page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/goForAWalk"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="592dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />

    <ImageButton
        android:id="@+id/goToFeed"
        android:layout_width="60sp"
        android:layout_height="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/goForAWalk"
        app:layout_constraintStart_toEndOf="@+id/goForAWalk"
        app:srcCompat="@android:drawable/ic_menu_preferences" />

    <ImageButton
        android:id="@+id/calendar"
        android:layout_width="60sp"
        android:layout_height="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/goToFeed"
        app:layout_constraintStart_toEndOf="@+id/goToFeed"
        app:srcCompat="@android:drawable/ic_menu_month" />

    <ImageButton
        android:id="@+id/reminder"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginEnd="92dp"
        app:layout_constraintBottom_toBottomOf="@+id/calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/calendar"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

</androidx.constraintlayout.widget.ConstraintLayout>