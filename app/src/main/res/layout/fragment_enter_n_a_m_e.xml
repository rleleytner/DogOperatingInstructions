<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enterNAME">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textherename"
            android:layout_width="145sp"
            android:layout_height="107sp"
            android:layout_marginStart="2dp"
            android:text="@string/name"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nameOfDog"
            android:layout_width="263dp"
            android:layout_height="51dp"
            android:layout_marginStart="145dp"
            android:ems="10"
            android:hint="вот тут!"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:autofillHints="" />

        <Button
            android:id="@+id/approveName"
            android:layout_width="261dp"
            android:layout_height="58dp"
            android:bottomLeftRadius="0dp"
            android:bottomRightRadius="90sp"
            android:text="@string/approve"
            android:topLeftRadius="0dp"

            android:topRightRadius="0dp"
            app:layout_constraintStart_toEndOf="@+id/textherename"
            app:layout_constraintTop_toBottomOf="@+id/nameOfDog" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>