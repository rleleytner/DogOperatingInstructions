<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".REGchooseAVATAR">

    <TextView
        android:id="@+id/plsChooseIcon"
        android:layout_width="323dp"
        android:layout_height="82dp"
        android:layout_marginTop="52dp"
        android:text="Выберите аватар вашей собаки"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backToBirthd"
        android:layout_width="119dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/continueToVet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/backToBirthd"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:layout_width="410dp"
        android:layout_height="65dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/WhichOne"
                android:layout_width="674dp"
                android:layout_height="57dp"
                android:layout_marginBottom="60dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="-199dp">

                <RadioButton
                    android:id="@+id/avatar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  1       "
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="303dp" />

                <RadioButton
                    android:id="@+id/avatar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  2       "
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="155dp"
                    tools:layout_editor_absoluteY="304dp" />

                <RadioButton
                    android:id="@+id/avatar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  3       "
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="283dp"
                    tools:layout_editor_absoluteY="306dp" />

                <RadioButton
                    android:id="@+id/avatar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  4       "
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="13dp"
                    tools:layout_editor_absoluteY="524dp" />

                <RadioButton
                    android:id="@+id/avatar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  5       "
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="152dp"
                    tools:layout_editor_absoluteY="528dp" />

                <RadioButton
                    android:id="@+id/avatar6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  6       "
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="286dp"
                    tools:layout_editor_absoluteY="524dp" />
            </RadioGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/dog1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toStartOf="@+id/dog2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_1dog" />

    <ImageView
        android:id="@+id/dog2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_2dog" />

    <ImageView
        android:id="@+id/dog3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dog2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_3dog" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="300dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_4dog" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_5dog" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_6dog" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="27dp"
        android:layout_height="56dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/dog1"
        app:layout_constraintTop_toTopOf="@+id/dog1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/dog2"
        app:layout_constraintTop_toTopOf="@+id/dog2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/dog3"
        app:layout_constraintTop_toTopOf="@+id/dog3" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />


</androidx.constraintlayout.widget.ConstraintLayout>